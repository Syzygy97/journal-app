<% if user_signed_in? %>
  <%= render "layouts/navbar" %>
  <div class = "category-container">
    <section class = "snapshot-today">
      <%= render "today" %>
    </section>
    <section class = "categories-list">
      <%= render "categories_list" %>
    </section>
    <section class = "three-random-categories">
      <%= render "random" %>
    </section>
    <div class = "color-box">
      <div class = "color-1"></div>
      <div class = "color-2"></div>
      <div class = "color-3"></div>
    </div>
  </div>
<% else %>
  <%= render "layouts/home" %>
<% end %>


