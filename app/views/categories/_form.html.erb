<%= form_with(model: @category, data: { turbo: false }) do |form| %>
  <% if @category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% @category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class = "category-form">
    <div>
      <%= form.label :name %>
      <%= form.text_field :name , class: "category-form-name"%>
    </div>

    <div>
      <%= form.label :details %>
      <%= form.text_area :details, class: "category-form-details"%>
    </div>

    <div>
      <%= form.number_field :user_id, value: current_user.id, id: :category_user_id, type: :hidden %>
    </div>
  </div>

  <div class="create-btn">
    <%= form.submit %>
  </div>

<% end %>